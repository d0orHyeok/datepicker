{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "removeComments": false,
    "rootDir": "src",
    "paths": {
      "@/*": ["./src/*"],
      "@t/*": ["./types/*"]
    }
  },
  "include": ["./src/**/*", "./types/**/*.d.ts"]
}
